<window id="1100" type="dialog">
	<defaultcontrol>10000</defaultcontrol>
	<animation type="WindowOpen" reversible="false">
      <effect type="fade" start="0" end="100" time="700" tween="sine" easing="in"  />
      <effect type="slide" start="0,200" end="0,0" time="1000" delay="100" tween="cubic" easing="out" />
    </animation>
    <animation type="WindowClose" reversible="false">
      <effect type="fade" start="100" end="0" time="250" tween="sine" easing="out" />
      <effect type="slide" start="0,0" end="0,60" time="500" tween="sine" easing="out" />
    </animation>
	<coordinates>
		<system>1</system>
	</coordinates>
	<controls>
		<control type="group">
			<posx>320</posx>
			<posy>115</posy>
	  	<visible>!Window.IsActive(ShutdownMenu)</visible>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>640</width>
				<height>470</height>
				<texture background="true">ContentPanel.png</texture>
			</control>
			<control type="image">
        <posx>10</posx>
        <posy>10</posy>
        <width>620</width>
        <height>370</height>
        <texture border="5">black-back2.png</texture>
    	</control>
			<control type="label">
				<description>header label</description>
				<posx>60</posx>
				<posy>40</posy>
				<width>620</width>
				<height>50</height>
				<label>Hello!</label>
				<font>font35_title</font>
        <align>left</align>
        <aligny>center</aligny>
        <textcolor>white</textcolor>
        <shadowcolor>99000000</shadowcolor>
			</control>
			<control type="group">
				<posx>60</posx>
				<posy>115</posy>
				<control type="textbox">
					<description>textarea</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>530</width>
					<height>360</height>
					<label>Welcome to [B]BOXiK[/B] - the single access point to all your media.[CR][CR]We recommend you press the [B][COLOR=selected]OK[/COLOR][/B] button on your remote to go through the Help Guide to setup your [B]BOXiK[/B]. Otherwise press the [B]DOWN[/B] button on your remote to never see this message again. [CR]You can still find the Help Guide section on your home menu.[CR][CR]Happy watching,[CR][B]BOXiK[/B]
						</label>
					<font>font12</font>
					<align>left</align>
					<textcolor>white</textcolor>
					<shadowcolor>99000000</shadowcolor>
				</control>
			</control>
		  <control type="group" id="10000">
				<posx>160</posx>
				<posy>400</posy>
				<control type="button" id="10">
					<height>40</height>
					<width>250</width>
					<textoffsetx>20</textoffsetx>
					<align>center</align>
					<aligny>center</aligny>
					<font>font12_title</font>
					<texturefocus border="5">button-focus2.png</texturefocus>
					<texturenofocus border="5">button-nofocus2.png</texturenofocus>
					<pulseonselect>true</pulseonselect>
					<description>Help button</description>
					<posx>35</posx>
					<posy>0</posy>
					<label>Start Here</label>
					<ondown>Close</ondown>
					<onclick>ActivateWindow(1111)</onclick>
					<onclick>Close</onclick>
					<onclick>Skin.Setbool(HelpScreen)</onclick>
				</control>
		  </control>
		</control>
	</controls>
</window>
