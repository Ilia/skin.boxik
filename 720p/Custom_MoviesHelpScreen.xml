<window id="1101">
	<defaultcontrol always="true">10000</defaultcontrol>
  <allowoverlay>no</allowoverlay>
	<controls>
		<include>CommonBackground</include>
    <include>ContentPanelBackgrounds</include>
		<control type="group">
	    	<visible>!Window.IsActive(ShutdownMenu)</visible>
			<animation type="WindowOpen">
				<effect type="zoom" time="500" center="auto" start="200" delay="250" end="100" tween="cubic" easing="out" />
				<effect type="fade" time="500" center="auto" start="0"  delay="250" easing="out" end="100" reversible="false" />
			</animation>			
			<animation type="WindowClose">
				<effect type="zoom" time="400" center="auto" start="100" end="-10" tween="cubic" easing="in" />
				<effect type="fade" time="400" center="auto" start="100" easing="in" end="0" reversible="false"/>
			</animation>
			<animation type="Visible">
				<effect type="zoom" time="500" center="auto" start="-10" end="100" tween="cubic" easing="out" />
				<effect type="fade" time="500" center="auto" start="0" easing="out" end="100" reversible="false" />
			</animation>			
			<animation type="Hidden">
				<effect type="zoom" time="400" center="auto" start="100" end="-10" tween="cubic" easing="in" />
				<effect type="fade" time="400" center="auto" start="100" easing="in" end="0" reversible="false"/>
			</animation>
			<control type="image">
				<posx>195</posx>
				<posy>150</posy>
				<width>900</width>
				<height>500</height>
				<texture background="true">dialogs/firstime_bg.png</texture>
			</control>
			<control type="label">
				<description>header label</description>
				<posx>225</posx>
				<posy>235</posy>
				<width>830</width>
				<height>50</height>
				<font>font35_title</font>
				<label>Empty Library</label>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<shadowcolor>99000000</shadowcolor>
				<scroll>true</scroll>
				<scrollspeed>20</scrollspeed>
			</control>
			<control type="group">
				<posx>390</posx>
				<posy>315</posy>
				<control type="textbox">
					<description>textarea</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>510</width>
					<height>360</height>
					<label>BOXiK did not find any movies. You may need to create your movie library, to do so select the "Add Source" button below to show the "Add Video source" dialog. [CR][CR]Please follow the prompts to add all folders that you wish BOXiK to look through to find your movies.</label>
					<font>font12</font>
					<align>justify</align>
					<textcolor>white</textcolor>
					<shadowcolor>99000000</shadowcolor>
					<!--pagecontrol>61</pagecontrol -->
				</control>
			</control>
		  	<control type="group" id="10000">
				<posx>0</posx>
				<posy>505</posy>
				<control type="button" id="10">
					<description>Close button</description>
					<posx>470</posx>
					<posy>10</posy>
					<width>160</width>
					<height>38</height>
	        <label>Add Sources</label>
					<texturenofocus border="10,0,10,0">button-nofocus.png</texturenofocus>
					<texturefocus border="10,0,10,0">button-focus.png</texturefocus>
					<align>center</align>
					<aligny>center</aligny>
					<font>font12</font>
					<textcolor>white</textcolor>
					<focusedcolor>white</focusedcolor>
					<disabledcolor>white</disabledcolor>
					<shadowcolor>55000000</shadowcolor>
					<textoffsety>3</textoffsety>
					<onleft>11</onleft>
					<onright>11</onright>
					<onclick>Close</onclick>
					<onclick>ActivateWindow(videos,sources://video/,return)</onclick>
          <onclick>Action(down)</onclick>
          <onclick condition="!Library.HasContent(Movies)">Action(select)</onclick>          
				</control>
				<control type="button" id="11">
					<description>Close button</description>
					<posx>650</posx>
					<posy>10</posy>
					<width>160</width>
					<height>38</height>
	        		<label>Close</label>
					<texturenofocus border="10,0,10,0">button-nofocus.png</texturenofocus>
					<texturefocus border="10,0,10,0">button-focus.png</texturefocus>
					<align>center</align>
					<aligny>center</aligny>
					<font>font12</font>
					<textcolor>white</textcolor>
					<focusedcolor>white</focusedcolor>
					<disabledcolor>white</disabledcolor>
					<shadowcolor>55000000</shadowcolor>
					<textoffsety>3</textoffsety>
					<onleft>10</onleft>
					<onright>10</onright>
					<onclick>ActivateWindow(Home)</onclick>
				</control>
		  	</control>
		</control>
	</controls>
</window>